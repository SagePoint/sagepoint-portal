<div class="container">
    <form class="form-signin">
        <h2 class="form-signin-heading">New Password</h2>
        {{input type="password" value=password placeholder="New Password"}}
        <input id="match" type="password" class="form-control" placeholder="Type it again" required>
        <input type="hidden" {{bind-attr value=token}}>
        <button {{action 'update' }} class="btn btn-lg btn-primary btn-block" >Submit</button>
    </form>

</div> <!-- /container -->