<div class="container">
    <form class="form-signin" method="POST" action="">
    	<div class="header">
			<img src="img/logo-simple_72.png" alt="logo" />
        	<h2 class="form-signin-heading">
        		<div class="row">
        			<span class="adelle bold">Sage</span><span class="adelle">Point</span>
    			</div>
    			<div class="row">
        			<span>Software</span>
    			</div>
        	</h2>
    	</div>
    	<div class="footer">
    		<h2> Log in to SagePoint Portal:</h2>
	    	{{input id="email" name="email" type="text" value=email placeholder="Email"}}
	        {{input type="password" name="password" value=password placeholder="Password"}}
	  		<input type="hidden" id="auth_token" name="auth_token" />
	  		<div class="row remember-row">
	  			<label class="checkbox">
	  				{{input id="remember_me" name="remember_me" type="checkbox" value=remember_me}} Remember Me
  				</label>
	  			<a href="#">Forgot Password</a>
	  		</div>
	        <button {{action 'login' }} class="btn btn-lg btn-primary btn-block btn-sage" >Log In</button>
    	</div>
    </form>

</div> <!-- /container -->